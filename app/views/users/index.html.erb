<h1 align="center">
  All Alpha Bloggers
</h1>
<div align="center">
  <%= will_paginate %>
</div>
<% if (0==@users.count) %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <div class="panel-body">
            <h4 align="center">
              No bloggers registered yet
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div> 
<% else %>
  <div class="center">
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title"><%= link_to user.username, user_path(user) %></li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          </div>
        </div>  
      </ul>
    <% end %>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>